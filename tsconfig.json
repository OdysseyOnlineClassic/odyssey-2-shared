{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "none",
    "noImplicitAny": false,
    "outDir": "dist",
    "outFile": "dist/index.js",
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "types": [
      "node"
    ]
  },
  "include": [
    "node_modules/@types/node/index.d.ts",
    "definitions/**/*.d.ts",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "bin"
  ]
}
